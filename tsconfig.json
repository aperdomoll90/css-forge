{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["es5", "es2015", "es2016", "dom", "esnext"],
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strict": true,
    "target": "esnext"
  },

  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
