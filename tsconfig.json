{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["es5", "es2015", "es2016", "dom", "dom.iterable", "esnext"],
    "types": ["node", "jest"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dis/esm",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
  },

  "include": ["src"]
}
