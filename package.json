{
  "name": "css-forge",
  "title": "css-forge component library",
  "description": "React Component Library created by css-forge for experimental use",
  "version": "0.1.23",
  "license": "MIT",
  "author": "Adrian Perdomo Llerena",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "types/index.d.ts",
  "type": "module",
  "sideEffects": ["**/*.css"],
  "files": [
    "dist",
    "types"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aperdomoll90/css-forge"
  },
  "private": false,
  "dependencies": {},
  "scripts": {
    "start": "react-scripts start",
    "rollup:watch": "rollup -c -w",
    "build": "yarn build:dist && yarn build:types",
    "build:dist": "rm -rf dist/ && rollup -c",
    "build:types": "rm -rf types/ && tsc --emitDeclarationOnly --declaration --declarationDir types",
    "publish": "npm run build && npm publish --access public",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "local": "node build.js"
  },
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "./*": {
      "types": "./types/*/index.d.ts",
      "require": "./dist/*/index.cjs",
      "import": "./dist/*/index.mjs"
    },
    "./styles": "./dist/index.css",
    "./*/styles": "./dist/*/index.css"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@react-three/drei": "^9.117.0",
    "@react-three/fiber": "^8.17.0",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.0",
    "@storybook/addon-a11y": "^8.4.0",
    "@storybook/addon-essentials": "^8.4.0",
    "@storybook/addon-interactions": "^8.4.0",
    "@storybook/addon-links": "^8.4.0",
    "@storybook/blocks": "^8.4.0",
    "@storybook/react": "^8.4.0",
    "@storybook/react-vite": "^8.4.0",
    "@storybook/test": "^8.4.0",
    "@swc/core": "^1.9.0",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/three": "^0.170.0",
    "css-loader": "^7.1.0",
    "glslify": "^7.1.1",
    "gsap": "^3.12.0",
    "jest-axe": "^9.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "lerp": "^1.0.3",
    "postcss": "^8.4.49",
    "prop-types": "^15.8.1",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-intersection-observer": "^9.13.0",
    "react-scripts": "^5.0.1",
    "rollup": "^4.28.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-svg": "^2.0.0",
    "sass": "^1.82.0",
    "storybook": "^8.4.0",
    "style-loader": "^4.0.0",
    "three": "^0.170.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "web-vitals": "^4.2.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "gsap": "^3.12.0",
    "three": "^0.160.0 || ^0.170.0",
    "@react-three/fiber": "^8.0.0",
    "@react-three/drei": "^9.0.0"
  },
  "peerDependenciesMeta": {
    "gsap": { "optional": true },
    "three": { "optional": true },
    "@react-three/fiber": { "optional": true },
    "@react-three/drei": { "optional": true }
  }
}
